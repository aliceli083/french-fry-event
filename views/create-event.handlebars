<div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <div class="card-title-container">
            <span class="card-title"><h3>Create an Event!</h3></span>
          </div>
        </div>
        <form id="event-form">
        <div class="card-tabs">
          <ul class="tabs">
            <li class="tab col s4"><a href="#tab1">Event Info</a></li>
            <li class="tab col s4"><a href="#tab2">Invite Guests</a></li>
            <li class="tab col s4"><a href="#tab3">Create Menu</a></li>
          </ul>
        </div>
        <div class="card-content center">
          <div id="tab1">
            <span class="card-title">Event Info</span>
                <div class="input-field col s12">
                  <input id="event_name" type="text" class="validate">
                  <label for="event_name">Event Name</label>
                </div>
                <div class="input-field col s12">
                  <input id="event_description" type="text" class="validate">
                  <label for="event_description">Event Description</label>
                </div>
                <div class="input-field col s12">
                  <input id="event_type" type="text" class="validate">
                  <label for="event_type">Event Type</label>
                </div>
                <div class="input-field col s12">
                  <input id="street_address" type="text" class="validate">
                  <label for="street_address">Street Address</label>
                </div>
                <div class="input-field col s12">
                  <input id="city" type="text" class="validate">
                  <label for="city">City</label>
                </div>
                <div class="input-field col s12">
                  <input id="state" type="text" class="validate">
                  <label for="state">State</label>
                </div>
                <div class="input-field col s12">
                  <input id="zip" type="text" class="validate">
                  <label for="zip">Zip Code</label>
                </div>
                <div class="input-field col s12">
                  <input id="event_date" type="text" class="validate">
                  <label for="event_date">Date</label>
                </div>
                {{!-- <div class="input-field col s12">
                  <input id="event_time" type="text" class="validate">
                  <label for="event_time">Time of Day</label>
                </div> --}}

                <button class="btn waves-effect waves-light red" type="submit" id="submit-btn">Submit</button>
                <div class="row">
                </div>
          </div>
          <div id="tab2">
            <span class="card-title">Invite Guests</span>
            <div class="input-field col s6">
              <input id="guestFName" type="text" class="guests">
              <label for="guestFName">First Name</label>
            </div>
            <div class="input-field col s6">
              <input id="guestLName" type="text" class="guests">
              <label for="guestLName">Last Name</label>
            </div>
            <button class="btn waves-effect waves-light red" id="add-guest-btn">add</button>
            <h6>Guest List:</h6>
            <div id="guest-list" class="col s12">
            </div>
            <button class="btn waves-effect waves-light red" type="submit" id="save-guest-btn">Save Guest List</button>
            <div class="row">
            </div>
          </div>
          <div id="tab3">
            <span class="card-title">Create Menu</span>
            <div class="menuCriteria col s12">
              <input type="search" id="userSearch" placeholder="Enter Entree here...">            
              </div>
              <div class="menuOutput">
                  <button class="btn waves-effect waves-light red" id="generate">Create Menu</button>
                  <h4>Appetizer</h4>
                  <ul class="menu col s12">
                      <li id="app1"></li>
                      <li id="app2"></li>
                  </ul>
                  <h4>Entree</h4>
                  <ul>
                      <li id="ent1"></li>
                      <li id="ent2"></li>
                  </ul>
                  <h4>Dessert</h4>
                  <ul>
                      <li id="des1"></li>
                      <li id="des2"></li>
                  </ul>
              </div>
              <button id="nextBtn" class="btn waves-effect waves-light red hide"><a href="/map">Next</a></button>
              </div>
            <div class="row">
            </div>
          </div>
          <!-- <button class="btn waves-effect waves-light" type="submit" id="submit-btn">Submit</button> -->
        </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/assets/js/create-event.js"></script>