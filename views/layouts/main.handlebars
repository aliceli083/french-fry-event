<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <title>Family Social Events Planner</title>
  {{!--
  <link rel="stylesheet" href="/css/jass.css"> --}}
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <link rel="stylesheet" href="/assets/css/style2.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/leaflet.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="/assets/css/map.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-left p-2">
      <style>
        .navbar-fixed {
          margin-bottom: 100px;
        }

        .nav-wrapper {
          padding-left: 10px;
          padding-right: 10px;
        }

        #add-guest-btn {
          margin-top: 20px;
          margin-bottom: 20px;
        }

        #nextBtn {
          margin-top: 20px;
        }

        #generate {
          margin-top: 20px;
          margin-bottom: 20px;
        }

        #nextBtn a {
          color: white !important;
        }

        #save-guest-btn {
          margin-top: 20px;
        }

        .hide {
          display: none;
        }

        .card-title-container {
          display: flex;
          justify-content: center;
          margin-bottom: 10px;
        }

        .tab-buttons {
          display: flex;
          justify-content: space-around;
          margin-top: 20px;
        }

        .cards-container .card {
          width: 32%;
          min-height: 350px;
        }

        .custom-card {
          display: flex;
          justify-content: center;
          width: 600px;
          margin-left: 0 auto;
        }

        .card-create-account {
          display: none;
        }

        .brand-logo {
          font-size: 45px;
          font-family: 'Lexend', sans-serif;
        }

        html {
          font-family: GillSans, Calibri, Trebuchet, sans-serif;
        }
      </style>
      <div class="navbar-fixed">
        <nav>
          <div class="nav-wrapper red">
            <a href="#" class="brand-logo center">Family<span class="blue-text text-lighten-3"> â˜… </span>Fiesta</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="/">Home</a></li>
              <!-- Conditionally render login or logout links -->
              {{#if logged_in}}
              <li><a href="/create-event">New Event</a></li>
              <li><a href="/map">Event Preview</a></li>
              {{!-- <li><a href="/">Log-out</a></li> --}}
              <button class="no-button" id="logout">logout</button>
              {{else}}
              <li><a href="/login">Login</a></li>
              {{/if}}
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>

    </footer>
  </div>

  <!-- <script src="/family-event-planner/assets/js/main.js"></script> -->
  <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E="
    crossorigin="anonymous"></script>


  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/assets/js/logout.js"></script>
  {{/if}}
  {{!--
  <script src="/js/main.js"></script> --}}
  <script type="text/javascript" src="/assets/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var dropdowns = document.querySelectorAll('.dropdown-trigger')
      for (var i = 0; i < dropdowns.length; i++) {
        M.Dropdown.init(dropdowns[i]);
      }
    });
  </script>
</body>

</html>